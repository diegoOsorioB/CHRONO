<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/menuprincipal"
    android:layout_height="match_parent"
    tools:context=".FormActivity">

    <!-- Campo de texto Economico -->

    <!-- Botón Buscar -->

    <!-- Campo de texto Placas -->

    <!-- Campo de texto Tarimas -->

    <TextView
        android:id="@+id/economicoLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Economico"
        android:textColor="#C4A484"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/tarimasLabel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.051"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.318" />

    <EditText
        android:id="@+id/economicoEditText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="56dp"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@id/economicoLabel"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.6" />

    <Button
        android:id="@+id/buscarButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:text="Buscar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.735"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/economicoEditText" />

    <!-- Campo de texto Patín -->

    <TextView
        android:id="@+id/tarimasLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="44dp"
        android:text="Tarimas"
        android:textColor="#C4A484"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@+id/buscarButton"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buscarButton" />

    <EditText
        android:id="@+id/tarimasEditText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="44dp"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.686"
        app:layout_constraintStart_toEndOf="@id/tarimasLabel"
        app:layout_constraintTop_toBottomOf="@+id/buscarButton"
        app:layout_constraintWidth_percent="0.6" />

    <TextView
        android:id="@+id/patinLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Patín"
        android:textSize="20sp"
        android:textColor="#C4A484"
        app:layout_constraintTop_toBottomOf="@id/tarimasEditText"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="24dp" />

    <!-- Campo de texto Operador -->

    <!-- Campo de texto Kilometraje -->

    <EditText
        android:id="@+id/patinEditText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:inputType="number"
        android:digits="01"
        android:maxLength="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.846"
        app:layout_constraintStart_toEndOf="@id/patinLabel"
        app:layout_constraintTop_toBottomOf="@+id/tarimasEditText"
        app:layout_constraintWidth_percent="0.6" />

    <TextView
        android:id="@+id/operadorLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="40dp"
        android:text="Operador"
        android:textColor="#C4A484"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/patinLabel" />

    <EditText
        android:id="@+id/operadorEditText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.609"
        app:layout_constraintStart_toEndOf="@id/operadorLabel"
        app:layout_constraintTop_toBottomOf="@+id/patinEditText"
        app:layout_constraintWidth_percent="0.6" />

    <!-- Campo de texto No. Cincho -->

    <TextView
        android:id="@+id/kilometrajeLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="52dp"
        android:text="Kilometraje"
        android:textColor="#C4A484"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/operadorLabel" />

    <EditText
        android:id="@+id/kilometrajeEditText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.333"
        app:layout_constraintStart_toEndOf="@id/kilometrajeLabel"
        app:layout_constraintTop_toBottomOf="@+id/operadorEditText"
        app:layout_constraintWidth_percent="0.6" />

    <!-- Botón Guardar -->

    <TextView
        android:id="@+id/cinchoLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:text="No. Cincho"
        android:textColor="#C4A484"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/kilometrajeLabel" />

    <EditText
        android:id="@+id/cinchoEditText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="28dp"
        android:inputType="number"
        android:digits="01"
        android:maxLength="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.36"
        app:layout_constraintStart_toEndOf="@id/cinchoLabel"
        app:layout_constraintTop_toBottomOf="@+id/kilometrajeEditText"
        app:layout_constraintWidth_percent="0.6" />

    <Button
        android:id="@+id/guardarButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Guardar"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@id/cinchoEditText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/cancelarButton"
        android:layout_marginEnd="16dp" />

    <!-- Botón Cancelar -->
    <Button
        android:id="@+id/cancelarButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancelar"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@id/cinchoEditText"
        app:layout_constraintStart_toEndOf="@id/guardarButton"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
